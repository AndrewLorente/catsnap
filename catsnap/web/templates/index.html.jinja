{% extends "layout.html.jinja" %}
{% block title %}
    Search For An Image
{% endblock title %}
{% block content %}
    <article>
        <form method="get" action="{{ url_for('find') }}">
            <label for="tags">Search: </label>
            <input type="text" name="tags" id="tags" />
            <input type="submit" name="find_button" id="find_button" value="Find" />
        </form>
    </article>
    <article id="add">
        <a href="{{ url_for('show_add') }}">Add images</a>
    </article>
    <article>
        Or view an album:
        <ul>
        {% for album in albums %}
            <li>
                <a href="{{ url_for('view_album', album_id=album.album_id) }}">
                    {{album.name}}
                </a>
            </li>
        {% endfor %}
        </ul>
    </article>
{% endblock content %}
