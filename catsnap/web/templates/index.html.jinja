{% extends "layout.html.jinja" %}
{% block title %}
    Search For An Image
{% endblock title %}
{% block content %}
    <article class="container-fluid">
        <form method="get" action="{{ url_for('find') }}" class="navbar-form">
            <input class="form-control" type="text" name="tags" id="tags" autocapitalize="none">
            <input class="form-control" type="submit" name="find_button" id="find_button" value="Find">
        </form>
    </article>
    <article class="container-fluid">
        <p>
            Or view an album:
        </p>
        <ul>
        {% for album in albums %}
            <li>
                <a href="{{ url_for('view_album', album_id=album.album_id) }}">
                    {{ album.name |e}}
                </a>
            </li>
        {% endfor %}
        </ul>
    </article>
{% endblock content %}
