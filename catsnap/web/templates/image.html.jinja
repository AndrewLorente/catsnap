{% extends 'layout.html.jinja' %}
{% block title %}
    {{ image.caption() |e}}
{% endblock title %}
{% block page_title %}
    <h2 data-attribute="title">{{ self.title() }}</h2>
{% endblock page_title %}
{% block content %}
    <article id="image">
        <div class="image-container">
            <a href="{{ url }}">
                <img src="{{ url }}"
                    title="{{ image.caption() |e}}"
                    alt="{{ image.caption() |e}}" />
            </a>
        </div>
        {% if resizes %}
            <div>
                <ul>
                    {% for resize in resizes %}
                        <li><a href="{{ url_for('show_image', image_id=image.image_id, size=resize.suffix) }}">
                            {{resize.suffix |e}} {{resize.width |e}}x{{resize.height |e}}
                        </a></li>
                    {% endfor %}
                    <li><a href="{{ url_for('show_image', image_id=image.image_id, size='original')}}">original</a>
                </ul>
            </div>
        {% endif %}
        {% if image.description or user %}
            <div id="description">
                <span data-attribute="description">
                    {% if image.description %}
                        {{image.description |e}}
                    {% else %}
                        (click to add description)
                    {% endif %}
                </span>
            </div>
        {% endif %}
    </article>
    {% if tags %}
        <article id="tags">
            Tags:
            <ul>
                {% for tag in tags %}
                    <li><a href="{{ url_for('find', tags=tag)}}">{{tag |e}}</a></li>
                {% endfor %}
            </ul>
        </article>
    {% endif %}
    <article id="metadata">
        <dl>
            {% if image.camera %}
                <dt>Camera</dt>
                <dd>{{ image.camera |e}}</dd>
            {% endif %}
            {% if image.photographed_at %}
                <dt>Taken at</dt>
                <dd>{{ image.photographed_at |e}}</dd>
            {% endif %}
            {% if image.focal_length %}
                <dt>Focal Length</dt>
                <dd>{{ image.focal_length |e}}</dd>
            {% endif %}
            {% if image.aperture %}
                <dt>Aperture</dt>
                <dd>{{ image.aperture |e}}</dd>
            {% endif %}
            {% if image.shutter_speed %}
                <dt>Shutter Speed</dt>
                <dd>{{ image.shutter_speed |e}}</dd>
            {% endif %}
            {% if image.iso %}
                <dt>ISO</dt>
                <dd>{{ image.iso |e}}</dd>
            {% endif %}
        </dl>
    </article>
{% endblock content %}

{% block scripts %}
    <script src="/public/js/edit_image.js"></script>
    <script>
        window.image_id = {{ image.image_id }};
        window.logged_in = {{ 'true' if user else 'false' }};
    </script>
{% endblock scripts %}
