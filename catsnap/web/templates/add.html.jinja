{% extends 'layout.html.jinja' %}
{% block title %}
    Add Images
{% endblock title %}
{% block content %}
    <section class="album-menu">
        <form action="#" class="navbar-form">
            <select name="album" class="form-control">
                <option value="" selected>(Select album)</option>
                {% for album in albums %}
                    <option value="{{ album.album_id }}">{{ album.name }}</option>
                {% endfor %}
            </select>
        </form>
    </section>

    <section class="row">
        <article class="add">
            <form method="post" action="{{ url_for('add') }}" enctype="multipart/form-data" >
                <ul class="nav nav-tabs nav-justified" role="tablist">
                    <li class="active">
                        <a href="#file-upload" role="tab" data-toggle="tab">From File</a>
                    </li>
                    <li>
                        <a href="#url-upload" role="tab" data-toggle="tab">From Url</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane upload url-upload" id="url-upload">
                        <input type="submit" value="Go" class="btn btn-default" name="url-submit">
                        <div class="input">
                            <input type="text" name="url" id="url" class="form-control">
                        </div>
                    </div>

                    <div class="tab-pane active upload file-upload" id="file-upload">
                        <input type="submit" value="Go" class="btn btn-default" name="file-submit">
                        <div class="input">
                            <label class="btn btn-default" for="file">Select</label>
                            <input type="file" id="file" name="file">
                        </div>
                    </div>
                </div>
            </form>
        </article>
    </section>
{% endblock content %}
{% block scripts %}
    <script src="/public/js/add_image.js"></script>
{% endblock scripts %}
